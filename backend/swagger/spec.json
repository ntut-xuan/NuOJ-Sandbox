{
    "openapi": "3.0.3",
    "info": {
        "title": "NuOJ-Sandbox API Documentation",
        "description": "This is the NuOJ-Sandbox API Documentation based on the OpenAPI 3.0 specification.",
        "version": "0.1.0"
    },
    "tags": [
        {
            "name": "sandbox",
            "description": "The API about the sandbox."
        }
    ],
    "paths": {
        "/judge": {
            "get": {
                "tags": ["sandbox"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/judge_payload"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#components/schemas/judge_response"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "judge_payload": {
                "type": "object",
                "properties": {
                    "user_code": {
                        "type": "object",
                        "properties": {
                            "code": {
                                "type": "string",
                                "example": "#include<bits/stdc++.h> ..."
                            },
                            "language": {
                                "type": "string",
                                "example": "cpp"
                            }
                        }
                    },
                    "solution_code": {
                        "type": "object",
                        "properties": {
                            "code": {
                                "type": "string",
                                "example": "#include<bits/stdc++.h> ..."
                            },
                            "language": {
                                "type": "string",
                                "example": "cpp"
                            }
                        }
                    },
                    "checker_code": {
                        "type": "object",
                        "properties": {
                            "code": {
                                "type": "string",
                                "example": "#include<bits/stdc++.h> ..."
                            },
                            "language": {
                                "type": "string",
                                "example": "cpp"
                            }
                        }
                    },
                    "type": {
                        "type": "string",
                        "enum": ["Judge", "Compile", "Execute"],
                        "example": "Judge"
                    },
                    "options": {
                        "type": "object",
                        "properties": {
                            "threading": {
                                "type": "boolean",
                                "example": true
                            },
                            "time": {
                                "type": "integer",
                                "example": 4
                            },
                            "wall_time": {
                                "type": "integer",
                                "example": 4
                            }
                        }
                    }
                }
            },
            "judge_response": {
                "type": "object",
                "properties": {
                    "status": {
                        "type": "string",
                        "example": "OK"
                    },
                    "type": {
                        "type": "string",
                        "enum": ["Judge", "Compile", "Execute"],
                        "example": "Judge"
                    },
                    "tracker_id": {
                        "type": "string",
                        "format": "uuid",
                        "example": "f2aa9a22-8869-4cc8-812c-ca6ea7adb406"
                    },
                    "result": {
                        "$ref": "#components/schemas/judge_result"
                    }
                }
            },
            "judge_result": {
                "type": "object",
                "properties": {
                    "check_compile": {
                        "$ref": "#/components/schemas/judge_metadata"
                    },
                    "solution_compile": {
                        "$ref": "#/components/schemas/judge_metadata"
                    },
                    "submit_compile": {
                        "$ref": "#/components/schemas/judge_metadata"
                    },
                    "result": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "verdict": {
                                    "type": "string",
                                    "enum": ["AC", "WA", "TLE", "MLE", "RE", "SE"],
                                    "example": "OK"
                                },
                                "time": {
                                    "type": "number",
                                    "example": 0.001
                                },
                                "memory": {
                                    "type": "number",
                                    "example": 177652
                                }
                            }
                        }
                    }
                }
            },
            "judge_metadata": {
                "type": "object",
                "properties": {
                    "time": {
                        "type": "number",
                        "example": 1.12
                    },
                    "time-wall": {
                        "type": "number",
                        "example": 1.12
                    },
                    "max-rss": {
                        "type": "number",
                        "example": 178884
                    },
                    "csw-voluntary": {
                        "type": "number",
                        "example": 16
                    },
                    "csw-forced": {
                        "type": "number",
                        "example": 23
                    },
                    "cg-mem": {
                        "type": "number",
                        "example": 162264
                    },
                    "exitcode": {
                        "type": "number",
                        "example": 0
                    },
                    "compile-result": {
                        "type": "string",
                        "enum": ["OK", "FAIL"],
                        "example": "OK"
                    }
                }
            }
        }
    }
}
