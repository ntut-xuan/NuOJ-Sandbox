{
    "openapi": "3.0.3",
    "info": {
        "title": "NuOJ-Sandbox API Documentation",
        "description": "This is the NuOJ-Sandbox API Documentation based on the OpenAPI 3.0 specification.",
        "version": "0.1.0"
    },
    "tags": [
        {
            "name": "sandbox",
            "description": "The API about the sandbox."
        }
    ],
    "paths": {
        "/judge": {
            "get": {
                "tags": ["sandbox"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/judge_payload"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#components/schemas/judge_response"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "judge_payload": {
                "type": "object",
                "properties": {
                    "user_code": {
                        "type": "object",
                        "properties": {
                            "code": {
                                "type": "string",
                                "example": "#include<bits/stdc++.h> ..."
                            },
                            "compiler": {
                                "type": "string",
                                "example": "cpp"
                            }
                        }
                    },
                    "solution_code": {
                        "type": "object",
                        "properties": {
                            "code": {
                                "type": "string",
                                "example": "#include<bits/stdc++.h> ..."
                            },
                            "compiler": {
                                "type": "string",
                                "example": "cpp"
                            }
                        }
                    },
                    "checker_code": {
                        "type": "object",
                        "properties": {
                            "code": {
                                "type": "string",
                                "example": "#include<bits/stdc++.h> ..."
                            },
                            "compiler": {
                                "type": "string",
                                "example": "cpp"
                            }
                        }
                    },
                    "type": {
                        "type": "string",
                        "enum": ["Judge", "Compile", "Execute"],
                        "example": "Judge"
                    },
                    "options": {
                        "type": "object",
                        "properties": {
                            "threading": {
                                "type": "boolean",
                                "example": true
                            },
                            "time": {
                                "type": "integer",
                                "example": 4
                            },
                            "wall_time": {
                                "type": "integer",
                                "example": 4
                            }
                        }
                    }
                }
            },
            "judge_response": {
                "type": "object",
                "properties": {
                    "status": {
                        "type": "string",
                        "example": "OK"
                    },
                    "type": {
                        "type": "string",
                        "enum": ["Judge", "Compile", "Execute"],
                        "example": "Judge"
                    },
                    "tracker_id": {
                        "type": "string",
                        "format": "uuid",
                        "example": "f2aa9a22-8869-4cc8-812c-ca6ea7adb406"
                    },
                    "result": {
                        "$ref": "#components/schemas/judge_result"
                    }
                }
            },
            "judge_result": {
                "type": "object",
                "properties": {
                    "status": {
                        "type": "string",
                        "enum": ["AC", "WA", "TLE", "MLE", "CE", "SCE", "STLE", "SMLE", "CTLE", "CMLE", "CRE", "SRE", "RE", "CCE"],
                        "example": "AC"
                    },
                    "message": {
                        "type": "string",
                        "example": "OK."
                    },
                    "compile_detail": {
                        "type": "object",
                        "properties": {
                            "solution": {
                                "$ref": "#components/schemas/compile_detail_object"
                            },
                            "checker": {
                                "$ref": "#components/schemas/compile_detail_object"
                            },
                            "submit": {
                                "$ref": "#components/schemas/compile_detail_object"
                            }
                        }
                    },
                    "judge_detail": {
                        "type": "array",
                        "items": {
                            "$ref": "#components/schemas/judge_detail_object"
                        }
                    }
                }
            },
            "compile_detail_object": {
                "type": "object",
                "properties": {
                    "time": {
                        "type": "number",
                        "example": "1.209"
                    },
                    "memory": {
                        "type": "integer",
                        "example": "175000"
                    },
                    "exitcode": {
                        "type": "integer",
                        "example": "0"
                    }
                }
            },
            "judge_detail_object": {
                "type": "object",
                "properties": {
                    "verdic": {
                        "type": "string",
                        "enum": ["AC", "WA", "TLE", "MLE", "CE", "SCE", "STLE", "SMLE", "CTLE", "CMLE", "CRE", "SRE", "RE", "CCE"],
                        "example": "AC"
                    },
                    "output_set": {
                        "type": "object",
                        "properties": {
                            "submit": {
                                "type": "string",
                                "example": "5"
                            },
                            "solution": {
                                "type": "string",
                                "example": "5"
                            }
                        }
                    },
                    "runtime_info": {
                        "type": "object",
                        "properties": {
                            "solution": {
                                "$ref": "#components/schemas/compile_detail_object"
                            },
                            "checker": {
                                "$ref": "#components/schemas/compile_detail_object"
                            },
                            "submit": {
                                "$ref": "#components/schemas/compile_detail_object"
                            }
                        }
                    },
                    "log": {
                        "type": "string",
                        "example": "ok single line: '5'\n"
                    }
                }
            }
        }
    }
}
